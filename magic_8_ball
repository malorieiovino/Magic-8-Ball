import random

def magic_8_ball():
    responses = [
        "Yes, definitely!",
        "It is certain.",
        "Without a doubt.",
        "Reply hazy, try again.",
        "Ask again later.",
        "Cannot predict now.",
        "Don't count on it.",
        "My sources say no.",
        "Very doubtful.",
    ]

    print("ðŸŽ± Welcome to the Magic 8-Ball!")
    while True:
        question = input("\nAsk me a Yes/No question (or type 'exit' to quit): ").strip()
        if question.lower() == "exit":
            print("Goodbye! ðŸ”®")
            break
        if not question.endswith("?"):
            print("Please ask a Yes/No question ending with '?'.")
            continue

        print(f"ðŸŽ± {random.choice(responses)}")

# Run the Magic 8-Ball
if __name__ == "__main__":
    magic_8_ball()
